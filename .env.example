# Server Configuration
# Copy this file to .env and fill in your actual values

# Server connection details
SERVER_HOST=your-server-ip-or-domain
SERVER_PORT=22
SERVER_USER=your-username

# SSH Configuration
SSH_KEY_PATH=~/.ssh/id_rsa
# Or use password authentication (less secure)
# SERVER_PASSWORD=your-password

# Application deployment path on server
DEPLOY_PATH=/var/www/aoctimermap

# Docker configuration
CONTAINER_NAME=aoctimermap_container
IMAGE_NAME=aoctimermap

# Basic Auth credentials (for nginx .htpasswd)
# Generate with: htpasswd -c docker/nginx/.htpasswd username
AUTH_USERNAME=admin
# Note: Password should be hashed using htpasswd command

# Optional: Database backup location
DB_BACKUP_PATH=/backup/aoctimermap

# Environment
ENVIRONMENT=production
